{
	"name": "portfolio-website-svelte",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"drizzle:generate": "drizzle-kit generate:sqlite - out ./drizzle/migrations - breakpoints - schema=./drizzle/schema.ts",
		"drizzle:migrate": "tsx drizzle/migrate",
		"drizzle:drop": "drizzle-kit drop",
		"drizzle:introspect": "drizzle-kit introspect:sqlite",
		"drizzle:push": "drizzle-kit push:sqlite - schema=./drizzle/schema.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.1.1",
		"@sveltejs/adapter-vercel": "^3.1.0",
		"@sveltejs/kit": "^1.27.6",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"autoprefixer": "^10.4.16",
		"daisyui": "^4.4.19",
		"dotenv": "^16.3.1",
		"drizzle-kit": "^0.19.13",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "^8.4.32",
		"postcss-load-config": "^4.0.2",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"svelte-time": "^0.8.0",
		"tailwindcss": "^3.3.6",
		"tslib": "^2.6.2",
		"tsx": "^3.14.0",
		"typescript": "^5.3.2",
		"vite": "^4.5.1"
	},
	"type": "module",
	"dependencies": {
		"@libsql/client": "^0.3.6",
		"@vercel/analytics": "^1.1.1",
		"@vercel/blob": "^0.13.1",
		"@vercel/node": "^2.15.10",
		"ai": "^2.2.27",
		"drizzle-orm": "^0.28.6",
		"openai": "^4.20.1",
		"postmark": "^3.11.0",
		"svelte-email": "^0.0.4",
		"svelte-markdown": "^0.4.0",
		"svelte-particles": "^2.12.0",
		"tabler-icons-svelte": "^1.10.0",
		"web-vitals": "^3.5.0"
	}
}
